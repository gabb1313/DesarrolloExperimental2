!Programa principal para simulaci칩n con MonteCarlo
!DesExpII, 2018-1
!Gabriela Carretas

!El programa elige la configuraci칩n incial 칩ptima para poder realizar
!el movimiento de las part칤culas utilizando el algoritmo de MonteCarlo.
!Tras obtener las matrices de configuraci칩n, se calculan propiedades
!estructurales como la g(r) y la presi칩n.

!Iniciando el programa

!Configuraci칩n Inicial Random 3D con traslapes
!Unidades reducidas: sig
program MonteCarlo
  use constantes3D
  use variables3D

  !Declaraci칩n de variables
  implicit none

  !xo,yo,zo: posiciones viejas
  !xn,yn,zn: posiciones tentativas
  !V: energ칤a potencial total
  !Vo: energ칤a potencial vieja
  !Vn: energ칤a potencial nueva
  !dV: diferencia de energ칤a nueva(tentativa)/vieja
  !Vnor: energ칤a potencial total normalizada
  !razon: razon de aceptados de MonteCarlo
  !dmax: desplazamiento m치ximo en los movimientos
  !racep: razon de aceptados para optimizaci칩n
  !rand1,rand2: n칰meros aleatorios
  real *4 xo, yo, zo, xn, yn, zn, V, Vo, Vn
  real *4 dV, Vnor, razon, dmax, racep
  real *4 rand1, rand2, rand3

  !iprint: frecuencia de muestreo en pantalla
  !isave: frecuencia de guardar en el archivo
  !iratio: frecuencia de optimizaci칩n de paso
  !amc: # de movimientos aceptados por MC
  !i,j,k: contadores del loop
  !cm: contador de la matriz estructural
  integer *4 iprint, isave, iratio
  integer *4 amc
  integer *4 i, j, k, cm

  N=200
  NSTEP=103000
  ter=3000
  iprint=1000
  isave=20
  !phi=0.5
  dmax=0.1
  racep=0.5

  !obtenemos valores de entrada

  !print * , 'Numero total de particulas y concentracion reducida'
  !read (*,*) N, dens
  !print * , 'Numero de configuraciones y desplazamiento maximo'
  !read (*,*) NSTEP, dmax
  !print * , 'Frecuencia de muestreo en pantalla y de guardar en el archivo'
  !read (*,*) iprint, isave
  !print * , 'Razon de aceptados para optimizacion'
  !read (*,*) racep

  !Par치metros del potencial: DOBLE GAUSSIANA
  eta=0.0263
  T=0.2
  xi=3.0

  !calculando la concentraci칩n reducida en t칠rminos de la
  !fracci칩n en volumen
  !dens=(6.0*phi)/pi
  dens=0.2

  !calculando la longitud reducida
  L=((sig*real(N))/dens)**r3

  !calculando el radio de corte convencional
  rcut=L/2.0

  !calculando el n칰mero total de configuraciones guardadas
  ens=(NSTEP-ter)/isave

  !energ칤a inicial en ceros
  V=0.0
  dV=0.0

  !comenzar en ceros los contadores del algoritmo
  amc=0
  cm=0

  !abrimos los archivos
  open(2, file='cf.dat')
  open(3, file='terma.dat')
  open(11, file='gr.dat')

  !iniciando los vectores de posici칩n
  allocate(x(1:N))
  allocate(y(1:N))
  allocate(z(1:N))

  !iniciando las matrices de configuraci칩n
  allocate(cx(N,ens))
  allocate(cy(N,ens))
  allocate(cz(N,ens))

  !llamando a la subrutina de la configuraci蚤 inicial aleatoria con traslapes
  call CIRAN3D
  
  !llamando a la subrutina del c치lculo de la energ칤a de la configuraci칩n
  call ENCONF3D(V)

  write(*,*) 'Longitud reducida:',L
  write(*,*) 'Concentraci칩n reducida:', dens
  write(*,*) 'Energia de la configuracion inicial:',V
  write(*,*) 'Numero de configuraciones a guardar:',ens
  write(*,*) '# de configuracion || E. Potencial normalizada || Razon de aceptados'

  !iniciamos el contador de la configuraci칩n
  do k=1,NSTEP
    !iniciamos el contador de las part칤culas
    do i=1,N
      !posiciones iniciales
      xo=x(i)
      yo=y(i)
      zo=z(i)

      !llamando a la subrutina del c치lculo de la energ칤a por part칤cula
      call ENPAR3D(xo, yo, zo, i, Vo)

      !generando n칰meros aleatorios
      call random_number(rand1)
      call random_number(rand2)
      call random_number(rand3)

      !movemos a la i-칠sima part칤cula un desplazamiento aleatorio
      !con tama침o m치ximo dado por dmax
      xn = xo+(2.0*rand1-1.0)*dmax
      yn = yo+(2.0*rand2-1.0)*dmax
      zn = zo+(2.0*rand3-1.0)*dmax

      !condiciones peri칩dicas
      xn = xn-L*anint(xn/L)
      yn = yn-L*anint(yn/L)
      zn = zn-L*anint(zn/L)

      !llamando a la subrutina del c치lculo de la energ칤a por part칤cula
      call ENPAR3D(xn, yn, zn, i, Vn)

      !diferencia de energ칤as
      dV=Vn-Vo

      !llamando a la subrutina del Montecarlo
      call MC(dV, xn, yn, zn, i, amc, V)

      !calculando la energ칤a potencial normalizada
      Vnor=V/real(N)

      !solo guardamos la configuraci칩n final
      if (k.eq.NSTEP) then
        write(2,*) x(i), y(i), z(i)
      end if

    !termina loop de part칤culas
    end do

    !escribe: # configuraci칩n, energ칤a potencial normalizada
    write(3,*) k, Vnor

    !iprint=iratio
    !si el # de configuraci칩n es multiplo del contador iprint
    if(mod(k,iprint).eq.0.0)then
      !calcula la raz칩n de aceptados en el intervalo de la frecuencia
      razon=real(amc)/real(N*iprint)
      !escribe en pantalla para monitorear
      write(*,*) k, Vnor, razon

      !criterio de optimizaci칩n de paso
      !if(razon.gt.racep) then
       ! dmax=dmax*1.05
      !else
      !  dmax=dmax*0.95
      !end if

      amc=0.0
    end if

    !Decisi칩n para guardar en arreglos
    if (k.ge.ter.and.mod(k,isave).eq.0.0) then
        cm=cm+1
        do j=1,N
          !guardando configuraciones de equilibrio
          cx(j,cm)=x(j)
          cy(j,cm)=y(j)
          cz(j,cm)=z(j)
        end do
    end if

  !termina loop de configuraciones
  end do

  !llamando a la subrutina del c치lculo de la concentraci칩n final
  call DENSCTE3D

  !llamando a la subrutina del c치lculo de la g(r)
  call gr3D

  !cerramos los archivos
  close(2)
  close(3)

  !desocupamos los arreglos
   deallocate(x)
   deallocate(y)
   deallocate(z)
   deallocate(cx)
   deallocate(cy)
   deallocate(cz)

!fin del programa
end program MonteCarlo
